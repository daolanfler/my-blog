---
import { cn } from "@/lib/utils";
import ThemeToggle from "./ThemeToggle.astro";
import { Rss } from "lucide-react";

const url = new URL(Astro.request.url);

const pathname = url.pathname;
---

<nav class="h-[80px] mb-4 max-w-2xl m-auto p-4 flex justify-between">
  <div class="flex items-center font-serif text-4xl font-bold">
    <a href="/">天方夜坛</a>
  </div>
  <div class="flex items-center space-x-4 text-lg">
    <a
      href="/about"
      class={cn([
        pathname.startsWith("/about") && ["underline underline-offset-2"],
      ])}
    >
      About
    </a>
    <a
      href="/rss.xml"
      class="hover:text-primary mr-2 transition-colors"
      title="RSS Feed"
    >
      <Rss size={20} />
    </a>
    <ThemeToggle />
  </div>
</nav>
