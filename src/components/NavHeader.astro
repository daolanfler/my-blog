---
import ThemeToggle from "./ThemeToggle.astro";
import clsx from "clsx";
import '@fontsource/lxgw-wenkai';

const url = new URL(Astro.request.url);

const pathname = url.pathname;
---

<nav class="h-[80px] mb-4 max-w-3xl m-auto p-4 flex justify-between">
  <div class="font-bold flex items-center text-4xl font-lxgw">
    <a href="/">天方夜坛</a>
  </div>
  <div class="flex items-center text-lg">
    <a
      href="/snippet"
      class={clsx([
        "mr-2",
        pathname.startsWith("/snippet") && ["underline underline-offset-2"],
      ])}
    >
      Snippet
    </a>
    <a
      href="/about"
      class={clsx([
        "mr-2",
        pathname.startsWith("/about") && ["underline underline-offset-2"],
      ])}
    >
      About
    </a>
    <ThemeToggle />
  </div>
</nav>
