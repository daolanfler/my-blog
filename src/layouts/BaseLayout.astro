---
import BaseHead from "../components/BaseHead";
import type { MarkdownLayoutProps } from "astro";
import Footer from "../components/Footer";
import ThemeWrapper from "../components/ThemeWrapper.astro";
import Theme from "./Theme.astro";

// type Props = MarkdownLayoutProps<{
//     title: string;
// }> & { title: string };
const { pageTitle } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <link href="/index.css" rel="stylesheet" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Your Site's Title"
      href={new URL("rss.xml", Astro.site)}
    />
    <Theme />
    <BaseHead title={pageTitle} />
  </head>
  <body class="dark:bg-gray-900 dark:text-white">
    <nav class="h-[80px] mb-4 max-w-3xl m-auto p-4 flex justify-between">
      <div class="font-bold flex items-center text-2xl">
        <a href="/">天方夜坛</a>
      </div>
      <div class="flex items-center text-lg">
        <a href="/snippet" class="mr-2">Snippet</a>
        <a href="/about" class="mr-2">About</a>
        <ThemeWrapper />
      </div>
    </nav>
    <main>
      <!-- your content is injected here -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
