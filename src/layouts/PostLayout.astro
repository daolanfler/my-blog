---
import BaseLayout from "./BaseLayout.astro";
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
    title: string;
    pageTitle?: string;
}>;
const { pageTitle, title } = Astro.props.frontmatter || Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
    <article
        class="px-4 prose m-auto max-w-3xl prose-img:rounded-lg dark:prose-invert prose-headings:mt-4 prose-hr:my-4 prose-hr:border prose-hr:border-dashed prose-hr:border-gray-400"
    >
        <slot />
    </article>
</BaseLayout>
